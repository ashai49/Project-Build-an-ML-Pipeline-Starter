name: data_check

conda_env: conda.yml

entry_points:
  main:
    parameters:
      csv: {type: str, description: "Input CSV file artifact (latest data)"}
      ref: {type: str, description: "Reference CSV artifact (for comparison)"}
      kl_threshold: {type: float, description: "Threshold for KL divergence"}
      min_price: {type: float, description: "Minimum acceptable price"}
      max_price: {type: float, description: "Maximum acceptable price"}
    command: >
      python run.py
        --csv ${csv}
        --ref ${ref}
        --kl_threshold ${kl_threshold}
        --min_price ${min_price}
        --max_price ${max_price}